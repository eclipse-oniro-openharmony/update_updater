import("//build/test.gni")

UPDATER_TEST_ROOT = "${updater_path}/test/unittest"

MODULE_OUTPUT_PATH = "updater/updater_test"

ohos_unittest("bin_flow_update_test") {
  testonly = true
  module_out_path = MODULE_OUTPUT_PATH
  sources = [
    "bin_flow_update_unittest.cpp"
  ]
  include_dirs = [
    "${updater_path}/interfaces/kits/include",
    "${updater_path}/services/include",
    "${updater_path}/services/include/log",
    "${updater_path}/services/include/package",
    "${updater_path}/services/include/script",
    "${updater_path}/services/flow_update/update_bin",
    "${updater_path}/test/unittest",
    "${updater_path}/utils/include",
    "//third_party/googletest/googletest/include",
  ]
  deps = [
    "${updater_path}/services/log:libupdaterlog",
    "${updater_path}/services/flow_update/update_bin:libBinFlowUpdate",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]
  defines = [ "UPDATER_UT" ]
  configs = [ "$UPDATER_TEST_ROOT:utest_config" ]
  install_enable = true
  part_name = "updater"
}
