  ldflags = [ "--coverage" ]

  defines = [
    "UPDATER_UT",
    "BUILD_OHOS",
    "HDC_DEBUG",
    "HDC_SUPPORT_FLASHD",
    "HARMONY_PROJECT",
  ]
}

