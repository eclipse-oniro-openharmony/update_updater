    "//base/startup/appspawn/test/unittest/*",
    "//base/startup/init/test/unittest/*",
    "//base/update/sys_installer/test/unittest/*",
  ]

  cflags = [
    "--coverage",
    "-fprofile-arcs",
    "-Wno-implicit-fallthrough",
    "-Wno-unused-function",
  ]
  cflags_cc = [
    "-Wno-implicit-fallthrough",
    "-fexceptions",
